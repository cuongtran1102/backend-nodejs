<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Home</title>
  </head>
  <body>
    <div>
      <div class="topnav">
        <a class="active" href="/">Home</a>
        <!-- href="/"(nghĩa là trang chủ) Tương đương với router.get("/", getHomePage) bên web.js -->

        <a href="/create">Create user</a>
      </div>
      <h2 class="table-title">List User</h2>
      <div class="table-container">
        <table class="table-user">
          <!-- convert listUsers lấy từ hàm getHomePage sang kiểu dữ liệu string(listUsers là kiểu Oject(JSON)) -->
          <%= JSON.stringify(listUsers)%>
          <!-- cú pháp: <%= %> dùng để cho file ejs biết được là kiểu dữ liệu của java script -->
          <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Name</th>
            <th>City</th>
            <th>Actions</th>
          </tr>
          <!-- render các user từ listUsers ra table row(tr) -->
          <% listUsers.forEach(function(user) { %>
          <tr>
            <td><%= user.id%></td>
            <td><%= user.email%></td>
            <td><%= user.name%></td>
            <td><%= user.city%></td>
            <td>
              <a href="/update/<%= user.id%>">Edit</a>
              <!-- truyền id user sang trang update -->
              <form action="/delete-user/<%= user.id%>" method="POST">
                <button>Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </table>
      </div>
    </div>
  </body>
</html>
